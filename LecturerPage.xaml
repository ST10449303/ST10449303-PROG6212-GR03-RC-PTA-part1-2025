<Window x:Class="ContractMonthlyClaimSystemPart1.LecturerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Portal" Height="650" Width="820"
        WindowStartupLocation="CenterOwner" Background="{StaticResource PanelBrush}">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="12" CornerRadius="8">
            <TextBlock Text="Lecturer — Submit Claim" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="12" Margin="0,12,0,12">
            <StackPanel Orientation="Vertical">
                <WrapPanel>
                    <StackPanel Width="360">
                        <TextBlock Text="Lecturer name" FontWeight="SemiBold" />
                        <TextBox x:Name="txtLecturerName" Height="30" Margin="0,6,0,10"/>
                        <TextBlock Text="Staff number" FontWeight="SemiBold" />
                        <TextBox x:Name="txtStaffNumber" Height="30" Margin="0,6,0,10"/>
                        <TextBlock Text="Notes (optional)" FontWeight="SemiBold" />
                        <TextBox x:Name="txtNotes" Height="60" AcceptsReturn="True" Margin="0,6,0,10"/>
                    </StackPanel>

                    <StackPanel Width="360" Margin="14,0,0,0">
                        <TextBlock Text="Hours worked" FontWeight="SemiBold" />
                        <TextBox x:Name="txtHours" Height="30" Margin="0,6,0,10"/>
                        <TextBlock Text="Hourly rate (R)" FontWeight="SemiBold" />
                        <TextBox x:Name="txtRate" Height="30" Margin="0,6,0,10"/>
                        <Button Content="Upload supporting document" Height="36" Background="#FF7B61FF" Foreground="White" Click="Upload_Click"/>
                    </StackPanel>
                </WrapPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Submit Claim" Width="140" Height="40" Background="{StaticResource AccentBrush}" Foreground="White" Click="Submit_Click"/>
                    <Button Content="Save Draft" Width="100" Height="40" Background="#FFB7C6D9" Click="SaveDraft_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="My Submitted Claims" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ListBox x:Name="lstMyClaims" Height="300" DisplayMemberPath="DisplayTitle" />
                <TextBlock Text="(Select a claim to view details)" FontStyle="Italic" Foreground="#FF6B7280" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
            <Button Content="Back" Width="100" Height="36" Background="{StaticResource PrimaryBrush}" Foreground="White" Click="Back_Click"/>
            <Button Content="Exit" Width="100" Height="36" Background="{StaticResource DangerBrush}" Foreground="White" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
