<Window x:Class="ContractMonthlyClaimSystemPart1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="400"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f9">

    <Grid>
        <!-- Card container -->
        <Border CornerRadius="12" Background="White" Padding="20" Width="360" Height="350"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel VerticalAlignment="Stretch">

                <!-- Title -->
                <TextBlock Text="Staff Login"
                           FontSize="22" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Login As -->
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Login As" FontWeight="SemiBold" Foreground="#555"/>
                    <ComboBox x:Name="cmbRole" Height="35" Margin="0,5,0,0" 
                              Background="#f0f2f5" BorderBrush="#ccc">
                        <ComboBoxItem Content="Lecturer"/>
                        <ComboBoxItem Content="Coordinator"/>
                        <ComboBoxItem Content="Manager"/>
                    </ComboBox>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBox x:Name="txtEmail" Height="35" Margin="0,5,0,0" Padding="8"
                             Background="#f0f2f5" BorderBrush="#ccc"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#555"/>
                    <PasswordBox x:Name="txtPassword" Height="35" Margin="0,5,0,0" Padding="8"
                                 Background="#f0f2f5" BorderBrush="#ccc"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom" Margin="0,30,0,0">
                    <Button Content="Enter" Width="120" Height="40" Background="#2196F3" Foreground="White"
                            FontWeight="Bold" Click="Enter_Click" Margin="5" Cursor="Hand"/>
                    <Button Content="Exit" Width="120" Height="40" Background="#e74c3c" Foreground="White"
                            FontWeight="Bold" Click="Exit_Click" Margin="5" Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
