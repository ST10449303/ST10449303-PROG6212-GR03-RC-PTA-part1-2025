<Window x:Class="ContractMonthlyClaimSystemPart1.ManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Academic Manager" Height="560" Width="820" WindowStartupLocation="CenterOwner" Background="{StaticResource PanelBrush}">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="12" CornerRadius="8">
            <TextBlock Text="Academic Manager — Approve Claims" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="12" Margin="0,12,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Verified Claims" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListBox x:Name="lstVerified" Height="380" DisplayMemberPath="DisplayTitle"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="Selected claim details" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtDetails" Text="(select a claim)" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="Approve" Width="100" Height="36" Background="{StaticResource PrimaryBrush}" Foreground="White" Click="Approve_Click"/>
                        <Button Content="Reject" Width="100" Height="36" Background="{StaticResource DangerBrush}" Foreground="White" Click="Reject_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Back" Width="100" Height="36" Background="{StaticResource PrimaryBrush}" Foreground="White" Click="Back_Click"/>
            <Button Content="Exit" Width="100" Height="36" Background="{StaticResource DangerBrush}" Foreground="White" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
